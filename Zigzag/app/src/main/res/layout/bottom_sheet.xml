<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:src="@drawable/text_item_buy"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#ED858484" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/item_detail_buy_dir"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_item_buy_dir"/>
        <ImageView
            android:id="@+id/item_detail_buy_bucket"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:src="@drawable/ic_item_buy_bucket"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>