<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_gather_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모아보기"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/bucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bucket"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/gather_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/liner_gather_tap"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <LinearLayout
            android:id="@+id/linear_gather_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/gather_free"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:src="@drawable/gather_free"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="무료배송"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <View
            style="@style/Divider"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#EDD1D0D0"/>
        <LinearLayout
            android:id="@+id/linear_gather_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/gather_outer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:src="@drawable/gather_outer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아우터"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <View
            style="@style/Divider"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#EDD1D0D0"/>
        <LinearLayout
            android:id="@+id/linear_gather_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/gather_top"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:layout_height="40dp"
                android:src="@drawable/gather_top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="상의"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <View
            style="@style/Divider"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#EDD1D0D0"/>
        <LinearLayout
            android:id="@+id/linear_gather_dress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom|center"
            android:layout_gravity="top"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/gather_dress"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/gather_dress" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원피스/세트"
                android:layout_marginTop="6dp"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal|bottom"/>
        </LinearLayout>
        <View
            style="@style/Divider"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#EDD1D0D0"/>

        <LinearLayout
            android:id="@+id/linear_gather_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gather_bottom"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:src="@drawable/gather_bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="바지"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_gather_ad"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="5dp"/>
    <com.google.android.material.tabs.TabLayout
        app:tabBackground="@drawable/tab_selector"
        android:layout_below="@+id/vp_gather_ad"
        android:layout_centerHorizontal="true"
        app:tabGravity="center"
        android:clickable="false"
        app:tabIndicatorHeight="0dp"
        android:id="@+id/gather_ad_tab"
        android:layout_width="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"/>
    <FrameLayout
        android:id="@+id/gather_frame"
        android:layout_below="@+id/vp_gather_ad"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/gather_viedo"
        android:layout_marginTop="-15dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/gather_video_1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/gather_video_2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/gather_video_3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/gather_video_4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/gather_video_5"
                    android:layout_marginRight="60dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
    </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="지그재그 픽"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/gather_pick"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_4"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_6"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_7"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_8"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/gather_pick_9"/>
        </LinearLayout>
    </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/gather_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorBackground"
            app:fabSize="mini"
            app:maxImageSize="13dp"
            app:borderWidth="0dp"
            android:src="@drawable/ic_up"/>
    </FrameLayout>
</LinearLayout>