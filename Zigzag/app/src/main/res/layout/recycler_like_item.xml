<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:id="@+id/linear_like_item">

    <ImageView
        android:id="@+id/item_like_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_photo" />

    <TextView
        android:id="@+id/item_like_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="쇼핑몰 이름"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_like_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 소개 부분"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_like_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="19%"
            android:textStyle="bold"
            android:textColor="@color/colorControlActivated"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_like_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_bucket" />
    </LinearLayout>

</LinearLayout>