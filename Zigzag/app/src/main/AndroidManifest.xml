<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zigzag">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher_zigzag"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_zigzag_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".src.splash.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.home.HomeActivity">
        </activity>
        <activity android:name=".src.login.LogInActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".src.signIn.SignInActivity"/>
        <activity android:name=".src.outer.OuterActivity"/>
        <activity android:name=".src.top.TopActivity"/>
        <activity android:name=".src.dress.DressActivity"/>
        <activity android:name=".src.bottom.BottomActivity"/>
        <activity android:name=".src.setup.SetupActivity"/>
        <activity android:name=".src.withdrawal.WithdrawalActivity"/>
        <activity android:name=".src.itemdetail.ItemDetailActivity"/>
        <activity android:name=".src.bucket.BucketActivity"/>
        <activity android:name=".src.order.OrderActivity"/>
        <activity android:name=".src.OrderFinishActivity"/>
    </application>

</manifest>